@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>What's in your closet?</h1>
    <p class="lead">Come see what you've got!</p>
</div>

<div class="row">
    <div class="col-xs-6 col-md-3">
        
        @*Linking image thumbnails with Razor*@

        <a href="@Url.Action("Index", "WardrobeItems", new {itemTypeId = 1}, null)" class="thumbnail pink">
            <img src="~/Content/Images/pinkshirt.png"/>
        </a>
    </div>
    <div class="col-xs-6 col-md-3">
        <a href="@Url.Action("Index", "WardrobeItems", new {itemTypeId = 2}, null)" class="thumbnail yellow">
            <img src="~/Content/Images/BottomsReady.jpg">
        </a>
    </div>
    <div class="col-xs-6 col-md-3">
        <a href="@Url.Action("Index", "WardrobeItems", new {itemTypeId = 3}, null)" class="thumbnail green">
            <img src="~/Content/Images/highheel.jpg" />
        </a>
    </div>
    <div class="col-xs-6 col-md-3">
        <a href="@Url.Action("Index", "WardrobeItems", new {itemTypeId = 4}, null)" class="thumbnail blue">
            <img src="~/Content/Images/accessorize.jpg" />
        </a>
    </div>
</div>


