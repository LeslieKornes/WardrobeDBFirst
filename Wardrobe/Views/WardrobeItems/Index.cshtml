@model IEnumerable<Wardrobe.Models.WardrobeItem>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default thedeets">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">
                <h2>@ViewBag.TypeName Inventory</h2>
            </div>
        </div>
    </div>
</div>
@Html.ActionLink("Create New", "Create")
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail indexBox">
                    <img src="@Html.DisplayFor(modelItem => item.Image)" /><div>
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.Type)</p>
                        <p>@Html.ActionLink("View Details", "Details", new { id = item.WardrobeItemID }, new { role = "button", @class = "btn btn-primary buttonColor" }) </p>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

